<html lang="en">
<!--HEADER-->
<head>
  <%- include('layouts/header'); %>
  <title><%= locals.docTitle || 'CliniClick'; %></title>
</head>
<body class="d-flex flex-column min-vh-100">
<!--NAVBAR-->
<%- include('layouts/navbar') %>
<!--MAIN CONTENT-->
<main class="flex-grow-1">
  <div class="container my-5">
    <div class="row">
      <div class="col-12 mb-4"><h1 class="display-5">Invoice</h1></div>
    </div>
    <div id="invoiceFormWrapper">
      <% if(locals.appointments) { %>
        <% const bookings = JSON.parse(locals.appointments) %>
        <div class="table-responsive">
          <table class="table table-bordered table-dark table-striped">
            <thead class="fw-semibold">
            <tr>
              <td>Date</td>
              <td>Doctor</td>
              <td>Location</td>
              <td>ServiceType</td>
              <td>Print</td>
            </tr>
            </thead>
            <tbody>
            <% bookings.forEach(ap=> { %>
              <tr>
                <td><%= ap.bookingDate %></td>
                <td><%= ap.prefDoctor %></td>
                <td><%= ap.clinic %></td>
                <td><%= ap.serviceType %></td>
                <td>
                  <a role="button" class="btn btn-primary" href="/invoice/print?ap=<%= ap._id %>">Print Invoice</a>
                </td>
              </tr>
            <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</main>
<!--FOOTER-->
<%- include('layouts/footer') %>
</body>
</html>